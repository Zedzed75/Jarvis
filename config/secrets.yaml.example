# Jarvis Secrets Configuration Example
# Copy this file to secrets.yaml and add your actual API keys and credentials
# IMPORTANT: Never commit secrets.yaml to version control!

# Speech recognition
speech:
  recognition:
    google_api_key: "your_google_cloud_speech_api_key_here"
  
  # Wake word detection
  wake_word:
    porcupine_access_key: "your_porcupine_access_key_here"

# NLP services
nlp:
  dialogflow_api_key: "your_dialogflow_api_key_here"

# Notification settings
notifications:
  telegram:
    token: "your_telegram_bot_token_here"
    chat_id: "your_telegram_chat_id_here"

# Skills
skills:
  # Weather service API key
  weather:
    api_key: "your_openweathermap_api_key_here"
  
  # Calendar service credentials
  calendar:
    google_client_id: "your_google_client_id_here"
    google_client_secret: "your_google_client_secret_here"
  
  # Web search API key (if using Google)
  web_search:
    api_key: "your_google_search_api_key_here"
  
  # Smart home integration
  smart_home:
    token: "your_home_assistant_access_token_here"
    username: "your_smart_home_username_here"
    password: "your_smart_home_password_here"